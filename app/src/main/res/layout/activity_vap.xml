<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/vap_lend_layout"
            android:id="@+id/bottom_sticky_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/vap_img_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal" />

                <include layout="@layout/vap_basic_ad_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include layout="@layout/vap_address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include layout="@layout/vap_description_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <include layout="@layout/vap_reviews_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </ScrollView>




    </RelativeLayout>
</LinearLayout>