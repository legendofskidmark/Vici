<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ad_mapview_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title here" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ad_mapview_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review here" />

        <TextView
            android:id="@+id/ad_mapview_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance here" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/ad_mapview_directionbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Directions"/>

        <Button
            android:id="@+id/ad_mapview_callbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="call"/>

    </LinearLayout>
</LinearLayout>